<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10sp"
            android:clickable="true"
            app:cardBackgroundColor="#F5493C"
            android:layout_margin="10dp"
            android:id="@+id/shopCardViewId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/backgroundcolor"
                    android:id="@+id/cartIconId"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/cart_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backgroundcolor"
                    />

                <TextView
                    android:padding="2sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/cartTextId"
                    android:layout_weight="1"
                    android:text="Shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10sp"
            android:clickable="true"
            app:cardBackgroundColor="#F5493C"
            android:layout_margin="10dp"
            android:id="@+id/cameraCardViewId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/backgroundcolor"
                    android:id="@+id/photoIconId"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/photo_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backgroundcolor"
                    />

                <TextView
                    android:padding="2sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/photoTextId"
                    android:layout_weight="1"
                    android:text="Camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10sp"
            android:clickable="true"
            app:cardBackgroundColor="#F5493C"
            android:layout_margin="10dp"
            android:id="@+id/foodCardViewId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/backgroundcolor"
                    android:id="@+id/restaurantIconId"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/restaurant_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backgroundcolor"
                    />

                <TextView
                    android:padding="2sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/restaurantTextId"
                    android:layout_weight="1"
                    android:text="Food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10sp"
            android:clickable="true"
            app:cardBackgroundColor="#F5493C"
            android:layout_margin="10dp"
            android:id="@+id/shareCardViewId"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@drawable/backgroundcolor"
                    android:id="@+id/shareIconId"
                    android:layout_weight="2"
                    android:padding="10sp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/share_icon"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backgroundcolor"
                    />

                <TextView
                    android:padding="2sp"
                    android:gravity="center_horizontal"
                    android:id="@+id/shareTextId"
                    android:layout_weight="1"
                    android:text="Share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>